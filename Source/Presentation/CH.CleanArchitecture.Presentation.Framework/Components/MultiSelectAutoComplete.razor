@typeparam TItem
@typeparam TId
@using CH.CleanArchitecture.Presentation.Framework.Components.Input

<AutoComplete @ref="_autoComplete" 
              Label="@Label"
              T="@TItem"
              @bind-Value="@Value"
              SearchFunc="SearchAsync"
              ToStringFunc="@GetNameFunc"
              ShowProgressIndicator="true"
              DebounceInterval="600"
              Dense="true"
              Margin="Margin.Dense"
              Clearable="true"
              Immediate="false"
              Variant="Variant.Text"
              CoerceValue="true"
              ResetValueOnEmptyText="true"
              Adornment="@Adornment"
              AdornmentIcon="@AdornmentIcon" />

<MudChipSet T="TItem" AllClosable="true" OnClose="RemoveValue">
    @foreach (var val in _selectedValues)
    {
        <MudChip T="TItem" Size=Size.Small @key="@GetIdFunc(val)" Text="@GetNameFunc(val)" />
    }
</MudChipSet>