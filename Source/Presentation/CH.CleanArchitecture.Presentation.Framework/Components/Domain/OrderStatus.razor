@using CH.CleanArchitecture.Core.Domain.Order
<MudChip T="string" Size="Size.Small" Color="GetStatusColor()" IconColor="Color.Default">@Status.ToString()</MudChip>
@code {
    [Parameter]
    public OrderStatusEnum Status { get; set; }

    public Color GetStatusColor() {
        switch (Status) {
            case OrderStatusEnum.Completed: return Color.Success;
            case OrderStatusEnum.Pending: return Color.Warning;
            case OrderStatusEnum.Processing: return Color.Info;
            case OrderStatusEnum.Cancelled: return Color.Error;
            default: return Color.Default;
        }
    }
}
