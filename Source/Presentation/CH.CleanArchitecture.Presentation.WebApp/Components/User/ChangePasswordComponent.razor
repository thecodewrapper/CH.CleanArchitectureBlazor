@inherits BaseComponent
<MudPaper Class="mud-width-full">
    <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudCard>
            <MudCardContent>
                <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_OldPassword)" Class="mt-3" @bind-Value="model.OldPassword" For="@(() => model.OldPassword)" InputType="MudBlazor.InputType.Password" />
                <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_NewPassword)" HelperText="@L.GetLocalizedString(ResourceKeys.HelperText_ChooseStrongPassword)" Class="mt-3" @bind-Value="model.Password" For="@(() => model.Password)" InputType="MudBlazor.InputType.Password" />
                <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_ConfirmNewPassword)" HelperText="@L.GetLocalizedString(ResourceKeys.HelperText_RepeatPassword)" Class="mt-3" @bind-Value="model.Password2" For="@(() => model.Password2)" InputType="MudBlazor.InputType.Password" />
            </MudCardContent>
            <MudCardActions>
                <CRUDButton Type="CRUDButtonType.SubmitForm" />
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudPaper>