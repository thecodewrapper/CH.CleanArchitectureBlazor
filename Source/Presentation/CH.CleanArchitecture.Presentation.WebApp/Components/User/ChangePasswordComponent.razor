@inherits BaseComponent
<MudPaper Class="mud-width-full">
    <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudCard>
            <MudCardContent>
                <MudTextField Label="Old Password" Class="mt-3" @bind-Value="model.OldPassword" For="@(() => model.OldPassword)" InputType="MudBlazor.InputType.Password" />
                <MudTextField Label="New Password" HelperText="Choose a strong password" Class="mt-3" @bind-Value="model.Password" For="@(() => model.Password)" InputType="MudBlazor.InputType.Password" />
                <MudTextField Label="Confirm New Password" HelperText="Repeat the password" Class="mt-3" @bind-Value="model.Password2" For="@(() => model.Password2)" InputType="MudBlazor.InputType.Password" />
            </MudCardContent>
            <MudCardActions>
                <CRUDButton Type="CRUDButtonType.SubmitForm" />
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudPaper>