@using System.ComponentModel.DataAnnotations;
@inherits BaseComponent;
<MudPaper Style="width:100%">
    <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudCard>
            <MudCardContent>
                <MudStack Spacing="0">
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Name)" Class="mt-3" @bind-Value="model.Name" For="@(() => model.Name)" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Person" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Surname)" Class="mt-3" @bind-Value="model.Surname" For="@(() => model.Surname)" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.People" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Email)" Class="mt-3" For="@(() => model.Email)" Value="@model.Email" InputType="MudBlazor.InputType.Email" Disabled Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Email" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_PrimaryPhone)" @bind-Value="model.PhoneNumber" For="@(() => model.PhoneNumber)" InputType="MudBlazor.InputType.Telephone" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.LocalPhone" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_SecondaryPhone)" @bind-Value="model.SecondaryPhoneNumber" For="@(() => model.SecondaryPhoneNumber)" InputType="MudBlazor.InputType.Telephone" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Phone" />
                    <MudRadioGroup T="string" @bind-Value="model.LanguagePreference">
                        <MudRadio Value="@("en")" Color="Color.Primary" UncheckedColor="Color.Default">English</MudRadio>
                        <MudRadio Value="@("el")" Color="Color.Secondary" UncheckedColor="Color.Default">Ελληνικά</MudRadio>
                    </MudRadioGroup>
                </MudStack>

                <MudStack Class="mt-7" Spacing="0">
                    <MudText Class="mb-0" Typo="Typo.h6">@L.GetLocalizedString(ResourceKeys.Labels_Address)</MudText>
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Street1)" Class="mt-3" @bind-Value="model.Address.Line1" For="@(() => model.Address.Line1)" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.MapsHomeWork" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Street2)" Class="mt-3" @bind-Value="model.Address.Line2" For="@(() => model.Address.Line2)" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.MapsHomeWork" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_StreetNumber)" Class="mt-3" @bind-Value="model.Address.PostCode" For="@(() => model.Address.PostCode)" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Mail" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Country)" Class="mt-3" @bind-Value="model.Address.Country" For="@(() => model.Address.Country)" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_City)" Class="mt-3" @bind-Value="model.Address.City" For="@(() => model.Address.City)" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_Area)" Class="mt-3" @bind-Value="model.Address.Area" For="@(() => model.Address.Area)" />
                    <MudTextField Label="@L.GetLocalizedString(ResourceKeys.Labels_FlatNumber)" Class="mt-3" @bind-Value="model.Address.FlatNumber" For="@(() => model.Address.FlatNumber)" AdornmentIcon="@Icons.Material.Filled.Numbers" />
                </MudStack>
            </MudCardContent>
            <MudCardActions>
                <CRUDButton Type="CRUDButtonType.SubmitForm" />
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudPaper>