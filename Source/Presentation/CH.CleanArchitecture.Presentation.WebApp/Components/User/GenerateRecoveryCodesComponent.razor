@inherits BaseComponent
<MudPaper>
    @if (_recoveryCodes.Any()) {
        <div class="alert alert-warning" role="alert">
            <p>
                <strong>Put these codes in a safe place.</strong>
            </p>
            <p>
                If you lose your device and don't have the recovery codes you will lose access to your account.
            </p>
        </div>
        <div class="row">
            <div class="col-md-12">
                @for (var row = 0; row < _recoveryCodes.Count; row += 2) {
                    <code class="recovery-code">_recoveryCodes[row]</code>

                    <text>&nbsp;</text>

                    <code class="recovery-code">_recoveryCodes[row + 1]</code>

                    <br />
                }
            </div>
        </div>
    }
    else if (_twoFactorEnabled) {
        <div class="alert alert-warning" role="alert">
            <p>
                Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
                used in an authenticator app you should reset your authenticator keys.
            </p>
        </div>
        <div>
            <CRUDButton Type="CRUDButtonType.Success" OnClick="GenerateRecoveryCodes" Text="Generate recovery codes"/>
        </div>
    }
</MudPaper>